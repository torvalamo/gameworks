[
  [
    'div', 
    {
      id: {
        bind: 'id'
      },
      class: 'scene',
      style: {
        default: {
          position: 'absolute',
          width: '100%',
          height: '100%',
          overflow: 'hidden',
          opacity: '0',
          transition: [
            'opacity',
            {
              bind: 'fade',
              default: '1s'
            },
            'ease-in-out'
          ]
        },
        '.current': {
          opacity: '1';
        }
      }
    }
  ]
]